<design_first_approach>
  <overview>
    This mode prioritizes design system compliance and user experience excellence.
    Always request design specifications first, then implement with accessibility and performance in mind.
  </overview>

  <core_principles>
    <principle name="design_system_first" priority="critical">
      <description>Always request and follow design system specifications</description>
      <actions>
        <action>Request color palette, typography scale, and spacing system</action>
        <action>Use provided design tokens or establish modern defaults</action>
        <action>Implement CSS custom properties for theming consistency</action>
        <action>Document design system usage in component comments</action>
      </actions>
    </principle>

    <principle name="accessibility_compliance" priority="critical">
      <description>Ensure WCAG 2.1 AA compliance for all implementations</description>
      <requirements>
        <requirement>4.5:1 minimum contrast ratios</requirement>
        <requirement>Semantic HTML with proper ARIA labels</requirement>
        <requirement>Keyboard navigation support</requirement>
        <requirement>Screen reader compatibility</requirement>
        <requirement>Focus management for complex interactions</requirement>
      </requirements>
    </principle>

    <principle name="responsive_design" priority="high">
      <description>Mobile-first responsive design with fluid typography</description>
      <breakpoints>
        <breakpoint name="mobile" max_width="767px">Default, touch-first</breakpoint>
        <breakpoint name="tablet" min_width="768px" max_width="1023px">Enhanced layout</breakpoint>
        <breakpoint name="desktop" min_width="1024px">Full feature set</breakpoint>
      </breakpoints>
      <techniques>
        <technique>clamp() functions for fluid typography</technique>
        <technique>CSS Grid and Flexbox for flexible layouts</technique>
        <technique>Container queries where supported</technique>
        <technique>minmax() and fr units for responsive grids</technique>
      </techniques>
    </principle>
  </core_principles>

  <implementation_workflow>
    <step number="1" name="requirements_gathering">
      <action>Request design system details and requirements</action>
      <validation>Ensure all necessary assets and specifications are provided</validation>
    </step>

    <step number="2" name="component_planning">
      <action>Plan component structure and accessibility features</action>
      <considerations>
        <item>Semantic HTML structure</item>
        <item>ARIA labels and roles</item>
        <item>Keyboard navigation paths</item>
        <item>Loading and error states</item>
      </considerations>
    </step>

    <step number="3" name="implementation">
      <action>Code the component with modern CSS techniques</action>
      <practices>
        <practice>Use CSS Grid and Flexbox for layouts</practice>
        <practice>Implement custom properties for theming</practice>
        <practice>Add smooth transitions and hover effects</practice>
        <practice>Optimize for performance (will-change, transforms)</practice>
      </practices>
    </step>

    <step number="4" name="accessibility_testing">
      <action>Verify accessibility compliance</action>
      <checks>
        <check>Keyboard navigation works</check>
        <check>Screen reader compatibility</check>
        <check>Color contrast meets WCAG standards</check>
        <check>Focus indicators are visible</check>
      </checks>
    </step>

    <step number="5" name="performance_optimization">
      <action>Optimize for performance and user experience</action>
      <optimizations>
        <optimization>Minimize layout thrashing</optimization>
        <optimization>Use transform for animations</optimization>
        <optimization>Implement lazy loading where appropriate</optimization>
        <optimization>Optimize images and assets</optimization>
      </optimizations>
    </step>
  </implementation_workflow>

  <quality_checklist>
    <category name="design_system">
      <item>Follows provided design system specifications</item>
      <item>Uses consistent color palette</item>
      <item>Implements proper typography scale</item>
      <item>Adheres to spacing system</item>
    </category>

    <category name="accessibility">
      <item>Semantic HTML structure</item>
      <item>Proper ARIA labels and roles</item>
      <item>Keyboard navigation support</item>
      <item>Screen reader compatibility</item>
      <item>Focus management implemented</item>
      <item>Color contrast meets WCAG 2.1 AA</item>
    </category>

    <category name="responsive_design">
      <item>Mobile-first approach implemented</item>
      <item>Fluid typography with clamp()</item>
      <item>Flexible layouts with Grid/Flexbox</item>
      <item>Touch-friendly interactive elements</item>
      <item>Content reflows naturally</item>
    </category>

    <category name="performance">
      <item>CSS optimizations implemented</item>
      <item>Animations use transform properties</item>
      <item>Images optimized and lazy loaded</item>
      <item>Bundle size considerations</item>
    </category>
  </quality_checklist>
</design_first_approach>